rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete files only in their own folder.
    // The folder is named after their UID.
    match /{path}/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
