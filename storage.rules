rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path
    match /{allPaths=**} {
      // Allow public read access to all files by default.
      // This is useful for profile pictures, company logos, etc.
      // You can tighten this later if needed.
      allow read;
    }

    // Secure user-specific folders (resumes, certificates)
    // Only the authenticated user can write to their own folder.
    match /resumes/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /certificates/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
