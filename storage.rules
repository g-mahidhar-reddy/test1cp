
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete their own resume files.
    // The path is matched to the user's ID to ensure privacy.
    match /resumes/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read, write, and delete their own certificate files.
    // The path is matched to the user's ID to ensure privacy.
    match /certificates/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
