
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow users to read, write, and delete their own resumes
    match /resumes/{userId}/{fileName} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read, write, and delete their own certificates
    match /certificates/{userId}/{fileName} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read for any other files (e.g., company logos)
    match /{allPaths=**} {
      allow read;
    }
  }
}
