rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete their own files in designated folders.
    // The path segments {userId} and {fileId} are wildcards.
    match /resumes/{userId}/{fileId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /certificates/{userId}/{fileId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read access can be granted for specific folders if needed, for example:
    // match /public/{allPaths=**} {
    //   allow read;
    // }
  }
}
